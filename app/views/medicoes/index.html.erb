<div class="container mt-5">
  <h2 class="text-center mb-4">Registro de Medição - <%= Date.today.strftime("%d/%m/%Y") %></h2>

  <div class="row justify-content-center">
    <!-- Medição da Manhã -->
    <div class="col-lg-5 col-md-6 col-sm-12 text-center mb-4 p-3">
      <h4 class="mb-3">Medição da Manhã</h4>
      <div class="hidrometro-container">
        <img src="<%= asset_path('hidrometro_manha.jpg') %>" alt="Hidrometro Manhã" class="img-fluid rounded shadow">
        <input type="number" id="medicaoManha" class="hidrometro-input" placeholder="000000" maxlength="6" required>
      </div>
      <button id="btnSalvar" class="btn btn-primary mt-3 px-4 py-2">Salvar</button>
    </div>

    <!-- Medição da Tarde -->
    <div class="col-lg-5 col-md-6 col-sm-12 text-center mb-4 p-3">
      <h4 class="mb-3">Medição da Tarde</h4>
      <div class="hidrometro-container">
        <img src="<%= asset_path('hidrometro_tarde.jpg') %>" alt="Hidrometro Tarde" class="img-fluid rounded shadow">
        <input type="number" id="medicaoTarde" class="hidrometro-input" placeholder="000000" maxlength="6" required>
      </div>
      <button id="btnSalvar"class="btn btn-primary mt-3 px-4 py-2">Salvar</button>
    </div>
  </div>

  <!-- Exibir Consumo Total -->
  <div class="text-center mt-5 p-3 bg-light rounded shadow">
    <h3>Consumo Total do Dia: 
      <span id="consumoTotal" class="text-success fw-bold">
        <%= @medicoes.find_by(data: Date.today)&.consumo_total || 0 %> m³
      </span>
    </h3>
  </div>
</div>
