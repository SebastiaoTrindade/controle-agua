<p id="notice"><%= notice %></p>

<h1>Medicaos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Data</th>
      <th>Medicao manha</th>
      <th>Medicao tarde</th>
      <th>Consumo total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicaos.each do |medicao| %>
      <tr>
        <td><%= medicao.user %></td>
        <td><%= medicao.data %></td>
        <td><%= medicao.medicao_manha %></td>
        <td><%= medicao.medicao_tarde %></td>
        <td><%= medicao.consumo_total %></td>
        <td><%= link_to 'Show', medicao %></td>
        <td><%= link_to 'Edit', edit_medicao_path(medicao) %></td>
        <td><%= link_to 'Destroy', medicao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

